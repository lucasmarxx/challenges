#this is the treasure map challenge

position = input('where is the treasure? ')

row1 = ['0', '0', '0']
row2 = ['0', '0', '0']
row3 = ['0', '0', '0']

map = [row1, row2, row3]
print(f'{row1}\n{row2}\n{row3}')

row = int(position[0]) - 1
column = int(position[1]) - 1

selected_row = map[column]
selected_row[row] = 'X'

print(f'{row1}\n{row2}\n{row3}')
